{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Run Build Script",
            "program": "${workspaceFolder}/build.sh",
            "runtimeExecutable": "/bin/bash",
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Run Start Script",
            "program": "${workspaceFolder}/start.sh",
            "runtimeExecutable": "/bin/bash",
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal"
        },
    ]
}